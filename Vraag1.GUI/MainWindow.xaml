<Window x:Class="Vraag1.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vraag1.GUI"
        mc:Ignorable="d"
        Title="MovieSearch" Height="450" Width="450">
    <Grid>
        <TextBox x:Name="TxtSearchTerm" Margin="10,10,65,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" ToolTip="Enter search term here..."/>
        <Button x:Name="BtnSearch" Content="Search" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50" IsDefault="True" Click="BtnSearch_Click"/>
        <Button x:Name="BtnLoad" Content="Load movies" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Click="BtnLoad_Click"/>
        <ScrollViewer Margin="10,60,10,10" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="TxtResults" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
